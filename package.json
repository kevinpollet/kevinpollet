{
  "name": "kevinpollet",
  "description": "NPM card for Kevin Pollet (@kevinpollet)",
  "version": "1.1.1",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/kevinpollet#readme",
  "bugs": "https://github.com/kevinpollet/kevinpollet/issues",
  "repository": "github:kevinpollet/kevinpollet",
  "keywords": [
    "card",
    "npm",
    "npm card",
    "npx",
    "npx card"
  ],
  "bin": {
    "kevinpollet": "bin/card.js"
  },
  "scripts": {
    "clean": "rm -f bin/output",
    "build": "node scripts/build.js",
    "dev": "node bin/card.js",
    "format": "prettier --write '{scripts,bin}/**/*.js' '*.{json,md,yml}'",
    "prebuild": "npm run clean",
    "predev": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "bin"
  ],
  "devDependencies": {
    "boxen": "4.0.0",
    "chalk": "2.4.2",
    "husky": "2.4.0",
    "lint-staged": "8.2.0",
    "prettier": "1.18.0"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,js,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
