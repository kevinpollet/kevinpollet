{
  "name": "kevinpollet",
  "description": "NPM card for Kevin Pollet (@kevinpollet)",
  "version": "1.1.0",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kevinpollet/kevinpollet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinpollet/kevinpollet.git"
  },
  "keywords": [
    "card",
    "npm",
    "npm card",
    "npx",
    "npx card"
  ],
  "bin": {
    "kevinpollet": "bin/card.js"
  },
  "scripts": {
    "clean": "rm -f bin/output",
    "build": "node scripts/build.js",
    "dev": "node bin/card.js",
    "prebuild": "npm run clean",
    "predev": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "bin/card.js",
    "bin/output"
  ],
  "devDependencies": {
    "boxen": "2.1.0",
    "chalk": "2.4.1",
    "husky": "1.3.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "husky": {
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
